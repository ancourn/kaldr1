# KALDRIX Mini-Testnet Environment Variables

# Copy this file to .env and update with your values

# ===========================================
# Network Configuration
# ===========================================
KALDRIX_NETWORK_NAME=kaldrix-mini-testnet
KALDRIX_NETWORK_ID=kaldrix-test-1
KALDRIX_CHAIN_ID=1337

# ===========================================
# Node Configuration
# ===========================================
KALDRIX_NODE_ID=kaldrix-node-1
KALDRIX_ROLE=validator
KALDRIX_PORT=3000
KALDRIX_HOST=localhost

# ===========================================
# Data Directories
# ===========================================
KALDRIX_DATA_DIR=./data
KALDRIX_LOG_DIR=./logs
KALDRIX_CONFIG_DIR=./config

# ===========================================
# API Configuration
# ===========================================
KALDRIX_API_ENABLED=true
KALDRIX_API_PORT=8080
KALDRIX_WS_PORT=8081
KALDRIX_API_RATE_LIMIT_ENABLED=true
KALDRIX_API_RATE_LIMIT_REQUESTS=100
KALDRIX_API_RATE_LIMIT_WINDOW=60000

# ===========================================
# WebSocket Configuration
# ===========================================
KALDRIX_WS_ENABLED=true
KALDRIX_WS_CORS_ORIGIN=*
KALDRIX_WS_MAX_CONNECTIONS=1000

# ===========================================
# Security Configuration
# ===========================================
KALDRIX_TLS_ENABLED=false
KALDRIX_TLS_CERT_FILE=./certs/cert.pem
KALDRIX_TLS_KEY_FILE=./certs/key.pem
KALDRIX_AUTH_ENABLED=false
KALDRIX_AUTH_SECRET=your-secret-key-here
KALDRIX_AUTH_EXPIRY=3600

# ===========================================
# Consensus Configuration
# ===========================================
KALDRIX_CONSENSUS_TYPE=quantum-dag
KALDRIX_CONSENSUS_BLOCK_TIME=5000
KALDRIX_CONSENSUS_FINALITY=15000
KALDRIX_CONSENSUS_MAX_BLOCK_SIZE=1048576
KALDRIX_CONSENSUS_MAX_GAS_LIMIT=8000000
KALDRIX_CONSENSUS_MIN_GAS_PRICE=1000000000
KALDRIX_CONSENSUS_EPOCH_LENGTH=86400
KALDRIX_CONSENSUS_VALIDATOR_SET_SIZE=21
KALDRIX_CONSENSUS_UNBONDING_PERIOD=604800

# ===========================================
# Sharding Configuration
# ===========================================
KALDRIX_SHARDING_ENABLED=true
KALDRIX_SHARDING_SHARD_COUNT=4
KALDRIX_SHARDING_CROSS_SHARD_GAS_LIMIT=2000000
KALDRIX_SHARDING_RECEIPTS_ROOT_TIMEOUT=5000
KALDRIX_SHARDING_MAX_TRANSACTIONS_PER_SHARD=1000
KALDRIX_SHARDING_VALIDATION_TIMEOUT=30000
KALDRIX_SHARDING_CROSS_SHARD_TIMEOUT=15000

# ===========================================
# Quantum Cryptography Configuration
# ===========================================
KALDRIX_QUANTUM_ENABLED=true
KALDRIX_QUANTUM_KEY_ROTATION_ENABLED=true
KALDRIX_QUANTUM_KEY_ROTATION_INTERVAL=604800
KALDRIX_QUANTUM_BACKUP_KEYS=3

# ===========================================
# GPU Configuration
# ===========================================
KALDRIX_GPU_ENABLED=true
KALDRIX_GPU_MAX_CONCURRENT_TASKS=8
KALDRIX_GPU_MEMORY_LIMIT=4096
KALDRIX_GPU_PREFERRED_DEVICE=0

# ===========================================
# Batching Configuration
# ===========================================
KALDRIX_BATCHING_ENABLED=true
KALDRIX_BATCHING_MAX_BATCH_SIZE=100
KALDRIX_BATCHING_BATCH_TIMEOUT=1000
KALDRIX_BATCHING_MAX_BATCH_WAIT_TIME=5000
KALDRIX_BATCHING_ENABLE_SIGNATURE_AGGREGATION=true
KALDRIX_BATCHING_AGGREGATION_ALGORITHM=schnorr

# ===========================================
# TPS Configuration
# ===========================================
KALDRIX_TPS_CURRENT_TARGET=1000
KALDRIX_TPS_MILESTONES=1000,10000,30000,75000
KALDRIX_TPS_AUTO_SCALING=true
KALDRIX_TPS_MONITORING_INTERVAL=10000
KALDRIX_TPS_SCALING_THRESHOLD=0.8

# ===========================================
# Reliability Configuration
# ===========================================
KALDRIX_RELIABILITY_FAILOVER_ENABLED=true
KALDRIX_RELIABILITY_HEALTH_MONITORING=true
KALDRIX_RELIABILITY_AUTO_RECOVERY=true
KALDRIX_RELIABILITY_SLA_TARGET=99.99
KALDRIX_RELIABILITY_CHECK_INTERVAL=5
KALDRIX_RELIABILITY_INCIDENT_TIMEOUT=300
KALDRIX_RELIABILITY_ALERT_COOLDOWN=60
KALDRIX_RELIABILITY_RETENTION_PERIOD=7
KALDRIX_RELIABILITY_ENABLE_NOTIFICATIONS=true

# ===========================================
# Failure Simulation Configuration
# ===========================================
KALDRIX_FAILURE_SIMULATION_MAX_CONCURRENT_SCENARIOS=3
KALDRIX_FAILURE_SIMULATION_AUTO_RECOVERY=true
KALDRIX_FAILURE_SIMULATION_RECOVERY_DELAY=30
KALDRIX_FAILURE_SIMULATION_MONITORING_INTERVAL=10
KALDRIX_FAILURE_SIMULATION_CHAOS_ENABLED=false

# ===========================================
# Stress Test Configuration
# ===========================================
KALDRIX_STRESS_TEST_DEFAULT_DURATION=5
KALDRIX_STRESS_TEST_DEFAULT_INTENSITY=MEDIUM
KALDRIX_STRESS_TEST_DEFAULT_TARGET_TPS=1000
KALDRIX_STRESS_TEST_FAILURE_RATE=0.1
KALDRIX_STRESS_TEST_AUTO_SCALE=true
KALDRIX_STRESS_TEST_METRICS_INTERVAL=5

# ===========================================
# Storage Configuration
# ===========================================
KALDRIX_STORAGE_TYPE=leveldb
KALDRIX_STORAGE_PATH=./data
KALDRIX_STORAGE_MAX_OPEN_FILES=1000
KALDRIX_STORAGE_CACHE_SIZE=536870912
KALDRIX_STORAGE_COMPRESSION=true
KALDRIX_STORAGE_BACKUP_ENABLED=true
KALDRIX_STORAGE_BACKUP_INTERVAL=86400
KALDRIX_STORAGE_BACKUP_RETENTION=7

# ===========================================
# Logging Configuration
# ===========================================
KALDRIX_LOG_LEVEL=info
KALDRIX_LOG_FORMAT=json
KALDRIX_LOG_OUTPUTS=console,file
KALDRIX_LOG_FILE_PATH=./logs
KALDRIX_LOG_FILE_MAX_SIZE=10m
KALDRIX_LOG_FILE_MAX_FILES=5

# ===========================================
# Monitoring Configuration
# ===========================================
KALDRIX_MONITORING_ENABLED=true
KALDRIX_MONITORING_METRICS_ENABLED=true
KALDRIX_MONITORING_METRICS_PORT=9090
KALDRIX_MONITORING_METRICS_ENDPOINT=/metrics
KALDRIX_MONITORING_TRACING_ENABLED=true
KALDRIX_MONITORING_TRACING_SERVICE=kaldrix-node
KALDRIX_MONITORING_TRACING_SAMPLE_RATE=0.1
KALDRIX_MONITORING_HEALTH_ENABLED=true
KALDRIX_MONITORING_HEALTH_ENDPOINT=/health

# ===========================================
# Development Configuration
# ===========================================
NODE_ENV=development
KALDRIX_DEV_MODE=true
KALDRIX_DEV_RELOAD=true
KALDRIX_DEV_VERBOSE=false

# ===========================================
# Production Configuration
# ===========================================
# NODE_ENV=production
# KALDRIX_DEV_MODE=false
# KALDRIX_DEV_RELOAD=false
# KALDRIX_DEV_VERBOSE=false